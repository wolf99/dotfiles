[user]
        # Update and uncomment the following lines
#	email = {public GitHub email}
#	name = {GitHub username}
#	signingkey = {GPG signing key for use with GitHub}
[core]
	editor = vim
	# To use the following line, correct the path and uncomment.
#	excludesFile = /mnt/c/Users/{USERNAME}/.gitignore
	pager = diff-so-fancy | less --tabs=4 -RFX
[commit]
	gpgsign = true
[gpg]
	program = gpg
[credential]
	helper = /mnt/c/Program\\ Files/Git/mingw64/libexec/git-core/git-credential-manager.exe
[color]
	ui = true
[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22
[color "diff"]
	meta = yellow
	frag = magenta bold
	commit = yellow bold
	old = red bold
	new = green bold
	whitespace = red reverse
[diff-so-fancy]
	first-run = false
[alias]
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --all
